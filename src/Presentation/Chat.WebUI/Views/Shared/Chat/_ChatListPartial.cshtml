@model ChatListDto

<li class="row chat-list-li">
    <input type="hidden" id="chatListId" value="@Model?.Id">
    <div class="profile col-lg-3 pe-0 py-2">
        <img class="profile-img" src="https://cdn-icons-png.flaticon.com/512/64/64572.png">
    </div>
    <div class="user-info col-lg-9 px-0 py-2">
        <div class="full-name-and-last-message-time d-flex justify-content-between">
            <div class="full-name">
                <span class="full-name-text">@Model?.UserInfo.FullName</span>
            </div>
            <div>
                <span class="last-message-time">@Model?.LastMessageInfo.LastMessageTime</span>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <div class="last-message">
                <span class="last-message-text">@Model?.LastMessageInfo.LastMessage</span>
            </div>
            <div class="unread-message-count align-text-bottom">
                <span class="badge rounded-pill bg-info">@Model?.LastMessageInfo.UnreadMessageCount</span>
            </div>
        </div>
    </div>
</li>